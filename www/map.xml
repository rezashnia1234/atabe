<krpano version="1.0.8">
<action name="Move-Map">
if(IsMapOpen != true,
	set(IsMapOpen,true);
	set(plugin[MapIcon].onhover,showtext(اغلاق المخطط, ToolTips);set(crop,0|40|40|40););
	tween(plugin[map-body].alpha, 1);
	tween(plugin[map-body].x,5);
	
	set(plugin[BTN-open-map].enabled,false);
	tween(plugin[BTN-open-map].alpha, 0.0);
	tween(plugin[BTN-open-map].x, -132);
,
	set(IsMapOpen,false);
	set(plugin[MapIcon].onhover,showtext(اضهار المخطط, ToolTips);set(crop,0|40|40|40););
	tween(plugin[map-body].alpha, 0.0);
	tween(plugin[map-body].x,-323);
	
	set(plugin[BTN-open-map].enabled,true);
	tween(plugin[BTN-open-map].alpha, 1.0);
	tween(plugin[BTN-open-map].x, 0);
);	

</action>
<include url="%SWFPATH%/map-plan.xml"/>
<action name="hidemap-all">
Move-Map();
</action>
