<!-- Toolbar Icons -->
	<action name="Goto-Littleplanet-View">
			set(onclick,action(Goto-Normal-View););
			set(onhover,showtext(الوضع الاعتيادي, ToolTips);set(crop,0|40|40|40););
			set(islittleplanet,true);
			set(display.flash10,off);
			set(view.stereographic,true);
			
			copy(Fits_hlookat,view.hlookat);
			copy(Fits_vlookat,view.vlookat);
			copy(Fits_fov,view.fov);
			copy(Fits_fovmax,view.fovmax);
			
			tween(view.hlookat, 0.0, 1.0);
			tween(view.fisheye, 1.0, 1.0);
			tween(view.vlookat, 90.0, 1.0);
			tween(view.fovmax, 160.0, 1.0);
			tween(view.fov, 150.0, 1.0);
	</action>
	<action name="Goto-Normal-View">
			set(onclick,action(Goto-Littleplanet-View););
			set(onhover,showtext(لقطة 360 درجة, ToolTips);set(crop,0|40|40|40););
			tween(view.fisheye, 0.0, 1.0, default, set(display.flash10,on));
			tween(view.hlookat, get(Fits_hlookat), 1.0);
			tween(view.vlookat, get(Fits_vlookat), 1.0);
			tween(view.fovmax, get(Fits_fovmax), 1.0);
			tween(view.fov, get(Fits_fov), 1.0);
	</action>
	<action name="Move-Map">
	if(IsMapOpen != true,
		set(IsMapOpen,true);
		set(plugin[MapIcon].onhover,showtext(اغلاق المخطط, ToolTips);set(crop,0|40|40|40););
		tween(plugin[map-body].alpha, 1);
		tween(plugin[map-body].x,5);
		
		set(plugin[BTN-open-map].enabled,false);
		tween(plugin[BTN-open-map].alpha, 0.0);
		tween(plugin[BTN-open-map].x, -132);
	,
		set(IsMapOpen,false);
		set(plugin[MapIcon].onhover,showtext(اضهار المخطط, ToolTips);set(crop,0|40|40|40););
		tween(plugin[map-body].alpha, 0.0);
		tween(plugin[map-body].x,-323);
		
		set(plugin[BTN-open-map].enabled,true);
		tween(plugin[BTN-open-map].alpha, 1.0);
		tween(plugin[BTN-open-map].x, 0);
	);	

	</action>
	<action name="auto-rotate">
	if(IsAutoRotate != true,
		set(IsAutoRotate,true);
		set(plugin[rotate-icon].onhover,showtext(ایقاف الدوران التلقائي, ToolTips);set(crop,0|40|40|40););
		set(plugin[rotate-icon].crop,0|0|40|40);
		set(plugin[rotate-icon].onout,set(crop,0|0|40|40););
		set(autorotate.enabled,'true');set(autorotate.waittime,0);
	,
		set(IsAutoRotate,false);
		set(plugin[rotate-icon].onhover,showtext(تشغيل الدوران التلقائي, ToolTips);set(crop,0|120|40|40););
		set(plugin[rotate-icon].crop,0|80|40|40);
		set(plugin[rotate-icon].onout,set(crop,0|80|40|40););
		set(autorotate.enabled,'false');set(autorotate.waittime,0);
	);	

	</action>
	<action name="gyro-function">
	if(IsGyro != true,
		set(IsGyro,true);
		set(plugin[gyro-icon].onhover,showtext(غيرفعال کردن ژيروسکوپ, ToolTips);set(crop,0|40|40|40););
		set(plugin[gyro-icon].crop,0|0|40|40);
		set(plugin[gyro-icon].onout,set(crop,0|0|40|40););
		set(plugin[gyro].enabled,'true');
	,
		set(IsGyro,false);
		set(plugin[gyro-icon].onhover,showtext(فعال کردن ژيروسکوپ, ToolTips);set(crop,0|0|40|40););
		set(plugin[gyro-icon].crop,0|40|40|40);
		set(plugin[gyro-icon].onout,set(crop,0|40|40|40););
		set(plugin[gyro].enabled,'false');
	);
	</action>
	

